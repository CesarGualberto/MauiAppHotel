<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Sobre"
             Title="Sobre"
             BackgroundColor="{StaticResource Black}">
    <VerticalStackLayout>
        <Label 
            Text="Sobre o Desenvolvimento!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="White"
            Margin="20"
            FontSize="25"/>

        <Frame>
            <VerticalStackLayout>
                <Label Text="Este app foi desenvolvido para a contratação de hospedagens a distância utilizando a plataforma Visual Studio e as linguagens XAML e C#."
                       Margin="10"/>
                <Label Text="Desenvolvedor: César Augusto de Jesus Gualberto" Margin="10"/>
            </VerticalStackLayout>
        </Frame>

        <Button Text="Voltar" Margin="20" BackgroundColor="White" TextColor="Black" Clicked="Button_Clicked"/>

    </VerticalStackLayout>
</ContentPage>